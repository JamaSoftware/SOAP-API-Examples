<?xml version="1.0" encoding="UTF-8"?>
<project name="api_example_1" default="all">
  
  
  <property file="api_example_1.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.tox/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-doclet.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/htmlconverter.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath">
    <pathelement location="${basedir}/lib/FastInoset.jar"/>
    <pathelement location="${basedir}/lib/gmbal-api-only.jar"/>
    <pathelement location="${basedir}/lib/ha-api.jar"/>
    <pathelement location="${basedir}/lib/javax.annotation.jar"/>
    <pathelement location="${basedir}/lib/jaxb-api.jar"/>
    <pathelement location="${basedir}/lib/jaxb-impl.jar"/>
    <pathelement location="${basedir}/lib/jaxb-xjc.jar"/>
    <pathelement location="${basedir}/lib/jaxws-api.jar"/>
    <pathelement location="${basedir}/lib/jaxws-rt.jar"/>
    <pathelement location="${basedir}/lib/jaxws-tools.jar"/>
    <pathelement location="${basedir}/lib/jsr181-api.jar"/>
    <pathelement location="${basedir}/lib/mail.jar"/>
    <pathelement location="${basedir}/lib/management-api.jar"/>
    <pathelement location="${basedir}/lib/mimepull.jar"/>
    <pathelement location="${basedir}/lib/policy.jar"/>
    <pathelement location="${basedir}/lib/saaj-api.jar"/>
    <pathelement location="${basedir}/lib/saaj-impl.jar"/>
    <pathelement location="${basedir}/lib/stax-ex.jar"/>
    <pathelement location="${basedir}/lib/stax2-api.jar"/>
    <pathelement location="${basedir}/lib/streambuffer.jar"/>
    <pathelement location="${basedir}/lib/woodstox-core-asl.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module API Example 1 -->
  
  <dirname property="module.api_example_1.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.api_example_1" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.api_example_1" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.api_example_1" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.api_example_1" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="api_example_1.output.dir" value="${module.api_example_1.basedir}/out/production/API Example 1"/>
  <property name="api_example_1.testoutput.dir" value="${module.api_example_1.basedir}/out/test/API Example 1"/>
  
  <path id="api_example_1.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="api_example_1.module.production.classpath">
    <path refid="${module.jdk.classpath.api_example_1}"/>
    <path refid="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath"/>
  </path>
  
  <path id="api_example_1.runtime.production.module.classpath">
    <pathelement location="${api_example_1.output.dir}"/>
    <path refid="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath"/>
  </path>
  
  <path id="api_example_1.module.classpath">
    <path refid="${module.jdk.classpath.api_example_1}"/>
    <pathelement location="${api_example_1.output.dir}"/>
    <path refid="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath"/>
  </path>
  
  <path id="api_example_1.runtime.module.classpath">
    <pathelement location="${api_example_1.testoutput.dir}"/>
    <pathelement location="${api_example_1.output.dir}"/>
    <path refid="library.jax-ws-glassfish_/_jax-ws_2.2_ri_/_metro_1.x_/_jwsdp_2.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.api_example_1">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.api_example_1">
    <patternset refid="excluded.from.module.api_example_1"/>
  </patternset>
  
  <path id="api_example_1.module.sourcepath">
    <dirset dir="${module.api_example_1.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.api_example_1" depends="compile.module.api_example_1.production,compile.module.api_example_1.tests" description="Compile module API Example 1"/>
  
  <target name="compile.module.api_example_1.production" depends="register.custom.compilers" description="Compile module API Example 1; production classes">
    <mkdir dir="${api_example_1.output.dir}"/>
    <javac2 destdir="${api_example_1.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.api_example_1}/javac">
      <compilerarg line="${compiler.args.api_example_1}"/>
      <bootclasspath refid="api_example_1.module.bootclasspath"/>
      <classpath refid="api_example_1.module.production.classpath"/>
      <src refid="api_example_1.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.api_example_1"/>
    </javac2>
    
    <copy todir="${api_example_1.output.dir}">
      <fileset dir="${module.api_example_1.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.api_example_1.tests" depends="register.custom.compilers,compile.module.api_example_1.production" description="compile module API Example 1; test classes" unless="skip.tests"/>
  
  <target name="clean.module.api_example_1" description="cleanup module">
    <delete dir="${api_example_1.output.dir}"/>
    <delete dir="${api_example_1.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.api_example_1" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.api_example_1" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>